<html>
    <head><h1>My First Node HTML Page !</h1><p>Node html collab</p></head>
    <title>Node_html</title>
    </title>
    <style>
        body{background:skyblue;font-family: verdana; color:#fff;padding:30px}
        H1{font-size: 48px;text-transform: uppercase}
        p,li{font-size: 20px;text-align: center}
        h2,ul{font-size: 38px;text-align: center}

    </style>
    <body>
        <H1> This is the HTML page served by Node JS build by : <%=person%> </H1>
        <p><strong>Age : <%=data.age%>  </strong>  </p>
        <p><strong>Job : <%=data.job%>  </strong>  </p>
        <h2>Hobbies</h2>
        <ul>
            <% data.hobby.forEach(function(item){ %>
                <li><%=item%></li>
            <% }); %>
        </ul>
    </body>
</html>